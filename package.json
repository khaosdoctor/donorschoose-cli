{
  "name": "donorschoose-cli",
  "version": "1.0.0",
  "description": "Backend Test for Microsoft RCA",
  "main": "dist/cli.js",
  "bin": {
    "dc": "dist/cli.js",
    "donorschoose": "dist/cli.js"
  },
  "scripts": {
    "prepare": "npm run build:clean",
    "postinstall": "npm link",
    "lint": "tslint --project tsconfig.json",
    "test": "mocha -r ts-node/register -b test/**/*.test.ts --no-warnings",
    "build": "tsc",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "start:debug": "concurrently -i -s all \"tsc -w\" \"DEBUG=cli:* nodemon dist/index.js\"",
    "start": "node dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khaosdoctor/donorschoose-cli.git"
  },
  "author": "Lucas Santos <hello@lsantos.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khaosdoctor/donorschoose-cli/issues"
  },
  "homepage": "https://github.com/khaosdoctor/donorschoose-cli#readme",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/debug": "^4.1.5",
    "@types/inquirer": "^6.5.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.8",
    "@types/ora": "^3.2.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "standard": "^14.3.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "caporal": "^1.3.0",
    "chalk": "^2.4.2",
    "inquirer": "^7.0.0",
    "ora": "^4.0.1"
  }
}
